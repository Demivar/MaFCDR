<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping>
	<entity name="BM2\SiteBundle\Entity\CharacterSettings" table="CharacterSettings">
		<id name="id" type="integer">
			<generator strategy="IDENTITY"/>
		</id>
		<many-to-one field="character" target-entity="Character" inversed-by="settings"/>

		<field name="auto_read_realms" type="boolean" nullable="true"/>

	</entity>
</doctrine-mapping>
